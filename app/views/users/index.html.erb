<h2>All Posts</h2>
<div id="posts-outer">
  <% @all_posts.each do |post| %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= post.title %>
          <span style="float: right;"><%= post.updated_at.strftime("%b %d, %Y | %l:%M %P") %></span>
        </h3>
      </div>
      <div class="panel-body">
        <%= post.body %>
      </div>
    </div>
  <% end %>
</div>

<br>
<hr>
<br>

<h2>Post your status!</h2>
<br>

<% if user_signed_in? %>

  <% if @post.errors.messages.present? %>
    <p>I'm sorry, your post couldn't be saved because:</p>
    <ul>
      <% @post.errors.messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for([@user, @post]) do |f| %>
    <h4><%= f.label :title %></h4>
    <%= f.text_field :title %><br>

    <h4><%= f.label :body %></h4>
    <%= f.text_area :body %><br>

    <%= f.button :submit %>
  <% end %>
<% else %>
  <p>Sign in to post a status update!</p>
<% end %>
