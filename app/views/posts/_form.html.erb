<div id="post-form">
  Post your Status!

  <%= form_for([@user, @post], remote: true) do |f| %>
    <% if @post.errors.any? %>
      <div class="errors-div">
        <h4 class="errors-colors">
          I'm sorry, your post couldn't be saved because:
        </h4>
        <ul>
          <% @post.errors.messages.each do |field, error| %>
          <li class="errors-colors"><%= "#{field.to_s.capitalize} #{error[0]}" %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <br>
    <%= f.text_field :title, cols: 50, placeholder: 'Title' %>
    <br><br>

    <p id="body-errors">
      <%= f.text_area :body, id: 'post_body', cols: 20, rows: 3, class: ".input-sm", placeholder: 'Body' %>
    </p>

    <h4><%= f.submit 'Post' %></h4>
  <% end %>

</div>
