<div id="post-form">
  <h2>Post your Status!</h2>

  <%= form_for([@user, @post], remote: true) do |f| %>
    <% if @post.errors.any? %>
      <div class="errors-div">
        <h4 class="errors-colors">
          I'm sorry, your post couldn't be saved because:
        </h4>
        <ul>
          <% @post.errors.messages.each do |field, error| %>
          <li class="errors-colors"><%= "#{field.to_s.capitalize} #{error[0]}" %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h4><%= f.label :title %></h4>
    <%= f.text_field :title, cols: 50 %><br>

    <h4 id="body-errors"><%= f.label :body %></h4>
    <%= f.text_area :body, id: 'post_body', cols: 50, rows: 5, placeholder: 'Must be less than 200 words' %><br>

    <%= f.submit 'Post' %>
  <% end %>

</div>
