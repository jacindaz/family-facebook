<!DOCTYPE html>
<html>
<head>
  <title>FamilyFacebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <style>
  html { margin: 2% 5% 2% 5% }
  </style>
</head>
<body>

<div class="row">
  <div class="col-md-4">
    <h1>Welcome</h1>
  </div>
  <div class="col-md-8">
    <% if !user_signed_in? %>
      <%= link_to "Sign in", new_user_session_path, class: 'btn btn-default' %>
      <%= link_to "Register", new_user_registration_path, class: 'btn btn-default' %>
    <% else %>
      <%= link_to "Sign Out", destroy_user_session_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
<hr>

<%= yield %>

</body>
</html>
